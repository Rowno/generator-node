{
  "name": "@rowno/generator-node",
  "version": "10.1.0",
  "description": "Generic Yeoman generator for creating Node.js servers and modules.",
  "author": "Roland Warmerdam (https://roland.codes)",
  "keywords": [
    "yeoman-generator",
    "node"
  ],
  "repository": "Rowno/generator-node",
  "license": "MIT",
  "scripts": {
    "test": "xo && ava"
  },
  "files": [
    "app"
  ],
  "engines": {
    "node": ">=8"
  },
  "dependencies": {
    "gh-user": "^3.0.0",
    "globby": "^8.0.1",
    "moment": "^2.22.2",
    "yeoman-generator": "^3.1.1"
  },
  "devDependencies": {
    "ava": "1.0.0-beta.8",
    "babel-eslint": "^9.0.0",
    "eslint-config-xo-react": "^0.17.0",
    "eslint-plugin-react": "^7.11.1",
    "execa": "^1.0.0",
    "fs-extra": "^7.0.0",
    "xo": "^0.22.0",
    "yeoman-test": "^1.9.1"
  },
  "xo": {
    "parser": "babel-eslint",
    "extends": "xo-react",
    "prettier": true,
    "space": true,
    "semicolon": false,
    "settings": {
      "react": {
        "version": "16.4.2"
      }
    },
    "overrides": [
      {
        "files": "app/templates/**/*.js",
        "rules": {
          "import/no-extraneous-dependencies": "off",
          "import/no-unresolved": "off",
          "ava/no-ignored-test-files": "off"
        }
      }
    ]
  },
  "ava": {
    "files": [
      "test/*.js"
    ]
  }
}
