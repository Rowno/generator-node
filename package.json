{
  "name": "@rowno/generator-node",
  "version": "9.0.1",
  "description": "Generic Yeoman generator for creating Node.js servers and modules.",
  "author": "Roland Warmerdam (https://roland.codes)",
  "keywords": [
    "yeoman-generator",
    "node"
  ],
  "repository": "Rowno/generator-node",
  "license": "MIT",
  "scripts": {
    "test": "xo && ava app/*.test.js",
    "precommit": "lint-staged"
  },
  "files": [
    "app"
  ],
  "engines": {
    "node": ">=8"
  },
  "dependencies": {
    "@octokit/rest": "^15.9.3",
    "moment": "^2.22.2",
    "yeoman-generator": "^2.0.5"
  },
  "devDependencies": {
    "ava": "^0.25.0",
    "execa": "^0.10.0",
    "husky": "^0.14.1",
    "lint-staged": "^7.2.0",
    "mz": "^2.7.0",
    "xo": "^0.21.1",
    "yeoman-test": "^1.8.0"
  },
  "xo": {
    "prettier": true,
    "space": true,
    "semicolon": false,
    "overrides": [
      {
        "files": "app/templates/**/*.js",
        "rules": {
          "import/no-extraneous-dependencies": "off",
          "import/no-unresolved": "off"
        }
      }
    ]
  },
  "lint-staged": {
    "*.js": [
      "xo --fix",
      "git add"
    ]
  },
  "ava": {
    "files": ["test/*.js"]
  }
}
