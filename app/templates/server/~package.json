    "eslint-config-xo": "^0.27.1",
    "nodemon": "^1.19.2",
    "prettier": "^1.18.2"
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": ["xo/esnext", "prettier"],
