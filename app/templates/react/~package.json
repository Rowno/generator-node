{
  "name": "<%= appname %>",
  "version": "0.0.0",
  "description": "Project description.",
  "author": "<%= realname %> (<%= website %>)",
  "keywords": [],
  "repository": "<%= githubUser %>/<%= appname %>",
  "license": "ISC",
  "private": true,
  "main": "commonjs/index.js",
  "module": "esm/index.js",
  "sideEffects": false,
  "files": [
    "commonjs",
    "esm"
  ],
  "scripts": {
    "test": "xo && ava",
    "prepublishOnly": "yarn clean && yarn build",
    "build-commonjs": "BABEL_ENV=commonjs babel src --out-dir commonjs --source-maps inline",
    "build-esm": "BABEL_ENV=esm babel src --out-dir esm --source-maps inline",
    "build": "concurrently --names 'commonjs,esm' 'yarn build-commonjs' 'yarn build-esm'",
    "clean": "rm -rf commonjs esm"
  },
  "dependencies": {},
  "devDependencies": {},
  "xo": {
    "parser": "babel-eslint",
    "extends": "xo-react",
    "envs": [
      "node",
      "browser"
    ],
    "prettier": true,
    "space": true,
    "semicolon": false,
    "settings": {
      "react": {
        "version": "16.4.2"
      }
    }
  },
  "ava": {
    "require": [
      "babel-register",
      "./test/_setup"
    ],
    "babel": "inherit"
  },
  "size-limit": [
    {
      "path": "esm/index.js",
      "limit": "5 KB"
    }
  ]
}
