{
  "name": "<%= appname %>",
  "version": "0.0.0",
  "description": "Project description.",
  "author": "<%= realname %> (<%= website %>)",
  "keywords": [],
  "repository": "<%= githubUser %>/<%= appname %>",
  "license": "ISC",
  "private": true,
  "main": "commonjs/index.js",
  "module": "esm/index.js",
  "sideEffects": false,
  "files": ["commonjs", "esm"],
  "scripts": {
    "test": "yarn lint && ava",
    "lint": "eslint '**/*.js'",
    "prepublishOnly": "yarn clean && yarn build",
    "build-commonjs": "BABEL_ENV=commonjs babel src --out-dir commonjs --source-maps inline",
    "build-esm": "BABEL_ENV=esm babel src --out-dir esm --source-maps inline",
    "build": "concurrently --names 'commonjs,esm' 'yarn build-commonjs' 'yarn build-esm'",
    "clean": "rm -rf commonjs esm"
  },
  "dependencies": {
    "prop-types": "^15.7.2"
  },
  "peerDependencies": {
    "react": "^16.8.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.6.2",
    "@babel/core": "^7.6.2",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/preset-env": "^7.6.2",
    "@babel/preset-react": "^7.0.0",
    "@babel/register": "^7.6.2",
    "@size-limit/preset-small-lib": "^2.1.6",
    "ava": "^2.4.0",
    "babel-eslint": "^10.0.3",
    "concurrently": "^4.1.2",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.14.0",
    "eslint": "^6.4.0",
    "eslint-config-prettier": "^6.3.0",
    "eslint-config-xo": "^0.27.1",
    "eslint-config-xo-react": "^0.20.0",
    "eslint-plugin-react": "^7.14.3",
    "eslint-plugin-react-hooks": "^2.1.0",
    "prettier": "^1.18.2",
    "react": "^16.9.0",
    "react-dom": "^16.9.0"
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": ["xo/esnext", "xo-react", "prettier", "prettier/react"],
    "env": {
      "browser": true,
      "node": true
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    }
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "ava": {
    "require": ["@babel/register", "./test/_setup"]
  },
  "size-limit": [
    {
      "path": "esm/index.js",
      "limit": "5 KB"
    }
  ]
}
