{
  "name": "<%= appname %>",
  "version": "0.0.0",
  "description": "Project description.",
  "author": "<%= realname %> (<%= website %>)",
  "keywords": [],
  "repository": "<%= githubUser %>/<%= appname %>",
  "license": "ISC",
  "private": true,
  "main": "commonjs/index.js",
  "module": "esm/index.js",
  "sideEffects": false,
  "files": [
    "commonjs",
    "esm"
  ],
  "scripts": {
    "test": "make test",
    "build": "make build",
    "prepublishOnly": "make clean build"
  },
  "engines": {
    "node": ">=8"
  },
  "dependencies": {},
  "devDependencies": {},
  "xo": {
    "parser": "babel-eslint",
    "extends": "xo-react",
    "envs": [
      "node",
      "browser"
    ],
    "prettier": true,
    "space": true,
    "semicolon": false
  },
  "ava": {
    "require": [
      "babel-register",
      "./tools/enzyme-config"
    ],
    "babel": "inherit"
  },
  "size-limit": [
    {
      "path": "esm/index.js",
      "limit": "5 KB"
    }
  ]
}
